<div class="translation">
  <%= form_with(model: translation, local: true) do |form| %>
    <% if translation.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(translation.errors.count, "error") %> prohibited this translation from being saved:</h2>
        <ul>
          <% translation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :input_text %>
      <%= form.text_area :input_text, :cols => 50, :rows => 10 %>
    </div>
    <div class="actions">
      <%= form.submit 'Translate' %>
    </div>
    <% if @result.present? %>
      <div>
        翻译结果为：
        <p class="result"><%= @result['trans_result'].first['dst'] %></p>
      </div>
    <% end %>
  <% end %>
</div>

<style>
  .translation {
    font-size: 20px;
  }

  .result {
    color: #cc0000;
  }
</style>